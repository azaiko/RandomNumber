<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_show_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/msg_show_str"
            android:textAlignment="center"
            android:textColor="#C32A2A"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restartButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/restart_str"
                android:onClick="restart"
                app:icon="@android:drawable/ic_popup_sync" />

            <Switch
                android:id="@+id/gameModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gameMode" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/hint_show_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textAlignment="center"
        android:textColor="#14193C"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/attempts_left_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textAlignment="center"
        android:textColor="#BA00FF"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/num_user_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:visibility="visible"
        tools:visibility="visible" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/digit_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="7" />

            <Button
                android:id="@+id/digit_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:onClick="digitButtonClick"
                android:text="8" />

            <Button
                android:id="@+id/digit_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="9" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/digit_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="4" />

            <Button
                android:id="@+id/digit_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:onClick="digitButtonClick"
                android:text="5" />

            <Button
                android:id="@+id/digit_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/digit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="1" />

            <Button
                android:id="@+id/digit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:onClick="digitButtonClick"
                android:text="2" />

            <Button
                android:id="@+id/digit_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="digitButtonClick"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearInputButton"
                android:text="C" />

            <Button
                android:id="@+id/digit_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="digitButtonClick"
                android:text="0" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="removeInputButton"
                android:text="R" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:text="@string/confirm_str" />

</android.widget.LinearLayout>